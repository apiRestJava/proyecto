<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient android:startColor="@color/primary" android:endColor="@color/secondary" android:type="linear"/>
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/main_background"/>
        </shape>
    </item>
</layer-list>